{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "NextJS",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "strict": false,
    "module": "esnext",
    "paths": {
      "ui/*": ["../../packages/ui/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
